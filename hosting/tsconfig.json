{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@phits-tech/common/dist/*": ["../common/src/*"],
      "@assets/*": ["src/_assets/*"],
      "~/*": ["src/_services/*"],
      "@/*": ["src/*"]
    },
    // Override
    "importHelpers": true,
    "jsx": "preserve",
    "target": "ESNext"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "../common/tsconfig.json" }]
}
