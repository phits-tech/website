{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "description": "Monorepo root",
  "repository": "git@github.com:phits-tech/website.git",
  "workspaces": [
    "admin",
    "common",
    "docs",
    "functions",
    "hosting"
  ],
  "scripts": {
    "bootstrap": "cd admin && yarn config:deploy emu",
    "build": "yarn build:pwd && cd hosting && yarn build",
    "build:pwd": "cd $INIT_CWD && echo Build: $(pwd) && tsc -b",
    "clean": "yarn workspaces foreach -vip --exclude root run clean:pwd",
    "clean:pwd": "cd $INIT_CWD && echo Clean: $(pwd) && rimraf ./dist ./tsconfig.tsbuildinfo",
    "depdelete": "yarn workspaces foreach -vip --exclude root run depdelete:pwd && yarn run depdelete:pwd",
    "depdelete:pwd": "cd $INIT_CWD && echo Dep-Delete: $(pwd) && rimraf ./node_modules",
    "emu": "yarn emulate",
    "emulate": "node egg.js && firebase --project=\"phits-tech-emu\" emulators:start --only firestore,functions,auth",
    "emulatte": "printf \"\\\\n     /~~~~~~~~~~~~~~~~~~~/|\\\\n    /              /######/ / |\\\\n   /              /______/ /  |\\\\n  ========================= /||\\\\n  |_______________________|/ ||\\\\n   |  \\\\\\\\****/     \\\\\\\\__,,__/    ||\\\\n   |===\\\\\\\\**/       __,,__     ||  Joe Jacques\\\\n   |______________\\\\\\\\====/%%____||\\\\n   |   ___        /~~~~\\\\\\\\ %%  / |\\\\n  _|  |===|===   /      \\\\\\\\%%_/  |\\\\n | |  |###|     |########| | /\\\\n |____\\\\\\\\###/______\\\\\\\\######/__|/\\\\n ~~~~~~~~~~~~~~~~~~~~~~~~~~ \\\\n\\\\n  Here's your emu-latte!\\\\n  Oh... did you mean `yarn emulate`?\\\\n\"",
    "fix": "yarn fix:pwd",
    "fix:pwd": "cd $INIT_CWD && echo Fix: $(pwd) && eslint . --fix && prettier --loglevel warn --write . && stylelint --fix .",
    "fix-root": "eslint '.*.js' --fix && prettier --loglevel warn --write \"./*.{js,json}\" \".*.{js,json}\"",
    "lint": "yarn lint:pwd",
    "lint:pwd": "cd $INIT_CWD && echo Lint: $(pwd) && eslint . && prettier --check . && stylelint .",
    "lint-root": "eslint '.*.js' && prettier --check \"./*.{js,json}\" \".*.{js,json}\"",
    "preview": "cd ./hosting && yarn preview",
    "rebuild": "yarn clean && yarn build",
    "reset": "yarn add rimraf -D && yarn clean && yarn depdelete && yarn && yarn build",
    "seed": "cd ./admin && yarn seed",
    "serve": "cd ./hosting && yarn serve",
    "test": "yarn test:pwd",
    "test:pwd": "cd $INIT_CWD && echo Test: $(pwd) && jest --testPathIgnorePatterns=emu --passWithNoTests --color --verbose",
    "test-ci": "jest --testPathIgnorePatterns=emu --collectCoverage --json --outputFile=result.json --testLocationInResults --verbose",
    "test-emu": "firebase emulators:exec --only firestore \"jest --testPathPattern=emu\"",
    "up": "ncu -u && lerna exec --parallel -- ncu -u && yarn && yarn audit",
    "watch": "yarn workspaces foreach -vip --include @phits-tech/common --include @phits-tech/functions run watch:pwd",
    "watch:pwd": "cd $INIT_CWD && echo Watch: $(pwd) && tsc -w"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@firebase/app-types": "^0.6.2",
    "@firebase/rules-unit-testing": "^1.3.3",
    "@google-cloud/firestore": "^4.12.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.2",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-radar": "^0.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonar": "^0.5.1",
    "eslint-plugin-unicorn": "^33.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "eslint-plugin-vue": "^7.10.0",
    "eslint-plugin-woke": "^1.0.0",
    "firebase": "^8.6.3",
    "firebase-admin": "^9.9.0",
    "jest": "^27.0.3",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-property-sort-order-smacss": "^7.1.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "ts-essentials": "^7.0.1",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  }
}
